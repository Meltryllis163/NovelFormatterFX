<?xml version="1.0" encoding="UTF-8"?>

<?import cc.meltryllis.nf.constants.UICons?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<VBox xmlns:fx="http://javafx.com/fxml"
      xmlns="http://javafx.com/javafx"
      fx:controller="cc.meltryllis.nf.ui.controller.dialog.PatternCompileController"
      alignment="CENTER_LEFT"
      minWidth="800">
    <Label fx:id="patternLabel"/>
    <TextField fx:id="patternField"/>
    <Label fx:id="compileResultLabel">
        <graphic>
            <FontIcon iconLiteral="fth-check-circle"/>
        </graphic>
    </Label>
    <Label fx:id="testTextLabel"/>
    <TextField fx:id="testTextField" HBox.hgrow="ALWAYS"/>
    <Label fx:id="matchResultLabel">
        <graphic>
            <FontIcon iconLiteral="fth-check-circle"/>
        </graphic>
    </Label>
    <HBox alignment="BASELINE_RIGHT">
        <Button fx:id="applyButton" styleClass="success"/>
    </HBox>
    <spacing>
        <UICons fx:constant="BIG_SPACING"/>
    </spacing>
</VBox>

