<?xml version="1.0" encoding="UTF-8"?>

<?import atlantafx.base.layout.InputGroup?>
<?import cc.meltryllis.nf.constants.UICons?>
<?import cc.meltryllis.nf.ui.controls.FormField?>
<?import cc.meltryllis.nf.ui.controls.MTableView?>
<?import cc.meltryllis.nf.ui.controls.MTextField?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<?import java.lang.String?>
<FormField xmlns:fx="http://javafx.com/fxml"
           xmlns="http://javafx.com/javafx"
           fx:controller="cc.meltryllis.nf.ui.controller.output.ReplaceOutputController"
           styleClass="replace" fx:id="root">
    <body>
        <VBox>
            <HBox>
                <Button onAction="#selectAllListItems">
                    <graphic>
                        <FontIcon iconLiteral="fth-check-square"/>
                    </graphic>
                </Button>
                <Button onAction="#deleteSelectedItems">
                    <graphic>
                        <FontIcon iconLiteral="fth-trash"/>
                    </graphic>
                </Button>
                <Separator orientation="VERTICAL" styleClass="medium"/>
                <InputGroup HBox.hgrow="ALWAYS">
                    <ToggleButton fx:id="regexButton" maxHeight="50">
                        <styleClass>
                            <String fx:value="regex"/>
                            <String fx:value="button-icon"/>
                        </styleClass>
                    </ToggleButton>
                    <MTextField fx:id="targetField" HBox.hgrow="ALWAYS"/>
                    <Label fx:id="rightToLabel" maxHeight="50">
                        <graphic>
                            <FontIcon iconLiteral="fth-chevrons-right"/>
                        </graphic>
                    </Label>
                    <MTextField fx:id="replacementField" HBox.hgrow="ALWAYS"/>
                </InputGroup>
                <Button onAction="#addListItem">
                    <graphic>
                        <FontIcon iconLiteral="fth-plus-square"/>
                    </graphic>
                </Button>
                <spacing>
                    <UICons fx:constant="SPACING_5"/>
                </spacing>
            </HBox>
            <MTableView fx:id="replacementTableView" VBox.vgrow="ALWAYS" styleClass="bordered"/>
            <spacing>
                <UICons fx:constant="SPACING_5"/>
            </spacing>
        </VBox>
    </body>
</FormField>
