<?xml version="1.0" encoding="UTF-8"?>

<?import atlantafx.base.controls.Card?>
<?import atlantafx.base.controls.Tile?>
<?import cc.meltryllis.nf.constants.UICons?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.HBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<Card xmlns:fx="http://javafx.com/fxml"
      xmlns="http://javafx.com/javafx"
      fx:controller="cc.meltryllis.nf.ui.controller.output.ChapterFormatController"
      fx:id="root">
    <header>
        <Tile fx:id="tile"/>
    </header>
    <body>
        <HBox alignment="BOTTOM_LEFT">
            <ComboBox fx:id="comboBox" HBox.hgrow="ALWAYS"/>
            <Button onAction="#editList">
                <graphic>
                    <FontIcon iconLiteral="fth-edit" styleClass="icon-subtle"/>
                </graphic>
            </Button>
            <spacing>
                <UICons fx:constant="SMALL_SPACING"/>
            </spacing>
        </HBox>
    </body>
</Card>
